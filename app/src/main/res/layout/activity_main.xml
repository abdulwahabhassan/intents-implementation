<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/openGalleryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_gallery_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/selectedImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="@+id/openGalleryTextView"
        app:layout_constraintStart_toStartOf="@+id/openGalleryTextView"
        app:layout_constraintTop_toBottomOf="@+id/openGalleryTextView" />

    <TextView
        android:id="@+id/imageUriTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/selectedImageView"
        app:layout_constraintStart_toStartOf="@+id/selectedImageView"
        app:layout_constraintTop_toBottomOf="@+id/selectedImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>